Message -mini {
  font-size: .9rem
  justify-content: flex-start
  padding: .25rem .5rem
  min-height: inherit

  display: flex
  flex-wrap: wrap

  /* TODO - bring style inline with default.mcss */

  section.timestamp {
    order: 0
    position: initial
    left: initial
    min-width: 5.5rem
  }

  header.author {
    order: 1
    margin-right: .5rem
    
    position: initial
    left: initial
    top: initial
  }


  section.content {
    order: 2
    flex-basis: initial
    flex-grow: 1

    cursor: pointer
    margin-top: 0
  }

  section.meta {
    order: 3

    display: flex
    justify-content: flex-end
    align-items: center


    i, div, a {
      margin-left: .5rem
    }
  }

  section.raw-content {
    order: 4
    margin-left: 0

    pre {
      border: 1px gainsboro solid
      padding: .8rem
      background-color: #f5f5f5
      color: #c121dc
      padding: .3rem
      white-space: pre-wrap
      word-wrap: break-word

      span {
        font-weight: 600
      }
      a {
        word-break: break-all
      }
    }
  }
}
