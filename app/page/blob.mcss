Blob {
  width: 100%
  height: 100%

  display: grid
  grid: 1fr auto / 1fr
  grid-gap: .5rem

  img {
    max-width: 100%
    max-height: 100%
  }

  iframe {
    border: 0
    width: 100%
    height: 100%

    /* don't think these work */
    object-fit: scale-down
    object-position: 50% 50%
  }
}

