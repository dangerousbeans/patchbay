Scroller {
  $scrollable

  div.wrapper {
    align-self: center

    flex: 1 1
    $threadWidth
    padding-top: .5rem

    section.content {
      div {
        border-bottom: solid 1px gainsboro
      }
    }
  }
}

Scroller -errors {
  div.wrapper {
    width: initial
    max-width: 100%

    section.content div {
      border: none
    }
  }
}

