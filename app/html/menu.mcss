Menu {
  background-color: #0088cc
  width: .7rem 
  height: .7rem
  border-radius: 1rem

  margin: 0 .5rem

  div {
    display: none

    position: absolute
    top: .5em
    right: 0
    padding: 2rem 1rem .5rem
    background: linear-gradient(rgba(0,0,0,0), rgba(0,0,0,0) 1.5rem, #f5f5f5 1.5rem, #f5f5f5)
    z-index: 5
  }

  -open {
    div {
      display: flex
      flex-direction: column
    }
  }

  -newMsg {
    background-color: white
  }

  -disconnected {
    background-color: red
  }
}

